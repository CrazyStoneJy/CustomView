<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crazystone.me.customview">

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".XferModeActivity" />
        <activity android:name=".TestActivity" />
        <activity
            android:name=".practice_draw.PracticeDrawActivity"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".practice_paint.PracticePaintActivity"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".CustomViewActivity"
            android:hardwareAccelerated="false" />
    </application>

</manifest>